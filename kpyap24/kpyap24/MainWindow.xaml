<Window x:Class="kpyap24.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Button Control" Height="300" Width="400"
        SizeChanged="Window_SizeChanged">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Кнопка 1" Click="Button_Click" Width="150" Height="40" Margin="5"/>
            <Button Content="Кнопка 2" Click="Button_Click" Width="150" Height="40" Margin="5"/>
            <Button Content="Кнопка 3" Click="Button_Click" Width="150" Height="40" Margin="5"/>
            <Button Content="Открыть Color Menu"  Width="150" Height="40" Margin="5" Click="OpenColorMenu_Click"/>
        </StackPanel>
    </Grid>
</Window>
