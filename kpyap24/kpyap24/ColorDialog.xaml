<Window x:Class="kpyap24.ColorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Color" Height="250" Width="300">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Red:" Grid.Row="0"/>
        <TextBox x:Name="RedInput" Grid.Row="0" Width="50" HorizontalAlignment="Right" Text="255"/>

        <Label Content="Green:" Grid.Row="1"/>
        <TextBox x:Name="GreenInput" Grid.Row="1" Width="50" HorizontalAlignment="Right" Text="255"/>

        <Label Content="Blue:" Grid.Row="2"/>
        <TextBox x:Name="BlueInput" Grid.Row="2" Width="50" HorizontalAlignment="Right" Text="255"/>

        <CheckBox x:Name="LeftCheck" Content="Left" Grid.Row="3"/>
        <CheckBox x:Name="RightCheck" Content="Right" Grid.Row="4"/>

        <Button Content="OK" Grid.Row="5" Click="OkButton_Click"/>
    </Grid>
</Window>
